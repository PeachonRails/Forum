<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>



  <div class="form">
    <%= form_for(@post) do |f| %>
      <div class="field">
        <%= f.label :post, "Witaj! co dziś zrobiłeś aby zostać lepszym programistą?"%><br>
        <%= f.text_area :content %>

      </div>
      <div class="actions">
        <%= f.submit "Pochwal się!", class: "btn-submit"%>
      </div>
      <% end %>
  </div>


<table class= "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.created_at.strftime('%c') %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

