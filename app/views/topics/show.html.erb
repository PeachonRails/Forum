<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>



  <div class="form">
    <%= form_for @post, :url => group_topic_add_post_path(topic_id: @topic.id) do |f| %>
      <div class="field">
        <%= f.label :post, "Napisz post"%><br>
        <%= f.text_area :content %>

      </div>
      <div class="actions">
        <%= f.submit "Dodaj", class: "btn-submit"%>
      </div>
      <% end %>
  </div>


<table class= "table table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= post.content %></td>
        <td><%= post.created_at.strftime('%c') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

<br>

<%= link_to 'Back', group_path(:id => params[:group_id]) %>
