<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Group</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.description %></td>
        <td><%= topic.group_id %></td>
        <td><%= topic.user_id %></td>
        <td><%= link_to 'Show', group_topic %></td>
        <td><%= link_to 'Edit', edit_group_topic_path(:group_id => @topic.group.id, :id => @topic.id) %></td>
        <td><%= link_to 'Destroy', group_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

